---
import { ViewTransitions } from "astro:transitions";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Comprar lote en venta en Boyacá, municipio de Sotaquirá cerca de Paipa a 3 horas de Bogotá." />
		<meta name="viewport" content="width=device-width" />
        <meta name="google-site-verification" content="5wvVpfH2rJXarth2kQEZVL8Xl6q1V3c6jYMctvWiNLw" />
		<link rel="icon" type="image/svg+xml" href="/tree-icon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<ViewTransitions />
	</body>
</html>
<style is:global>
	@import url("https://fonts.googleapis.com/css2?family=Carter+One&family=Thasadith:ital,wght@0,700;1,700&display=swap");
	@import url("https://fonts.googleapis.com/css2?family=Inter:wght@100..900&family=Oswald:wght@500;600&family=Poppins:wght@200;400;500;700&display=swap");
	:root {
		--p-font: "Thasadith", sans-serif;
		--yellow-web: #f0a202;
		--carter-font: "Carter One", cursive;
		--shadow: 2px 2px 2px #8080804d;
	}
	html {
		font-family: system-ui, sans-serif;
		background: rgb(249, 245, 255);
		background-size: 224px;
	}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	p,
	li {
		font-family: "Inter", sans-serif;
		font-weight: 500;
		font-size: 20px;
		line-height: 1.6;
		color: #2d3a3a;
	}
</style>
